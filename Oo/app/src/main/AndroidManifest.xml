<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nikolina.pokusajstarijaverzija">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    android:hardwareAccelerated="true"

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- ********************************************************************************************* -->
        <activity android:name=".ForgotPassword"
            android:label="@string/forgot_pass_btn"
            android:parentActivityName=".MainActivity">
        </activity>
        <!-- ********************************************************************************************* -->
        <activity
            android:name=".Registration"
            android:label="@string/title_activity_registration"
            android:parentActivityName=".MainActivity">
        </activity>
        <!-- ********************************************************************************************* -->
        <activity
            android:name=".Addfile"
            android:label="@string/title_activity_addfile"
            android:parentActivityName=".MainActivity">
        </activity>
        <!-- ********************************************************************************************* -->
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity">
        </activity>
        <!-- ********************************************************************************************* -->
        <activity
            android:name=".Search"
            android:label="@string/search"
            android:parentActivityName=".MainActivity">
        </activity>
        <!-- ********************************************************************************************* -->
        <activity
            android:name=".DisplayListView"
            android:parentActivityName=".MainActivity"
            android:label="">
        </activity>
        <!-- ********************************************************************************************* -->
        <activity
            android:name=".SubCategory"
            android:parentActivityName=".MainActivity"
            android:label="">
        </activity>
        <!-- ********************************************************************************************* -->
        <activity
            android:name=".OpenPage"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:label="">
        </activity>
        <!-- ********************************************************************************************* -->
        <activity
            android:name=".SubCategory2"
            android:parentActivityName=".MainActivity"
            android:label="">
        </activity>
        <activity
            android:name=".SubCategory3"
            android:parentActivityName=".MainActivity"
            android:label="">
        </activity>
    </application>

</manifest>