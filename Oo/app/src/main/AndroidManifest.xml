<?xml version="1.0" encoding="utf-8"?>
<manifest package="hr.oglasnik.perhpethua.oo"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    android:hardwareAccelerated="true"

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ForgotPassword">
        </activity>
        <activity
            android:name=".registration"
            android:label="@string/title_activity_registration">
        </activity>
        <activity
            android:name=".Addfile"
            android:label="@string/title_activity_addfile">
        </activity>
        <activity
            android:name=".login"
            android:label="@string/title_activity_login">
        </activity>
        <activity
            android:name=".lista_kategorija"
            android:label="@string/title_activity_category">
        </activity>
        <activity
            android:name=".search"
            android:label="@string/search">
        </activity>
        <activity android:name=".DisplayListView">
        </activity>
        <activity android:name=".SubCategory">
        </activity>
        <activity android:name=".OpenPage">
        </activity>
    </application>

</manifest>