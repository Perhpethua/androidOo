<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_registration"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hr.oglasnik.perhpethua.oo.registration"
    android:background="@drawable/p4">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_holder_height"
        android:inputType="textPersonName"
        android:text="Grad"
        android:ems="10"
        android:id="@+id/editText12"
        android:background="@color/light_background"
        android:layout_above="@+id/editText13"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_holder_height"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editText11"
        android:text="Poštanski broj"
        android:background="@color/light_background"
        android:layout_alignBottom="@+id/editText12"
        android:layout_below="@+id/editText10"
        android:layout_toEndOf="@+id/editText12"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_holder_height"
        android:inputType="textPersonName"
        android:text="Prezime"
        android:ems="10"
        android:id="@+id/editText8"
        android:background="@color/light_background"
        android:layout_above="@+id/editText9"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_holder_height"
        android:inputType="textPersonName"
        android:text="Ime"
        android:ems="10"
        android:id="@+id/editText7"
        android:background="@color/light_background"
        android:layout_above="@+id/editText8"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentEnd="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_holder_height"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText9"
        android:text="Datum rođenja"
        android:background="@color/light_background"
        android:layout_above="@+id/editText10"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_holder_height"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText13"
        android:text="Broj tel/mob"
        android:background="@color/light_background"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_holder_height"
        android:inputType="textPersonName"
        android:text="Adresa"
        android:ems="10"
        android:id="@+id/editText10"
        android:background="@color/light_background"
        android:layout_above="@+id/editText12"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_holder_height"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText5"
        android:background="@color/light_background"
        android:hint="ime"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_holder_height"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/mail_holder"
        android:background="@color/light_background"
        android:hint="example@domain.com"
        android:layout_below="@+id/editText5"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_holder_height"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText6"
        android:background="@color/light_background"
        android:text="password"
        android:layout_below="@+id/mail_holder"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
